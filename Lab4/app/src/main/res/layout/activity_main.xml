<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2E4F4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/r" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="38dp"
            android:text="Jahangirnagar University"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="644dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:rotation="90"
            android:src="@drawable/me" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Personal Information Section -->
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="30dp"
                    android:text="Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="3dp"
                    android:text="Md Hasan Al Mamun"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10dp"
                    android:text="Department"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="2dp"
                    android:text="Computer Science and Engineering"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10dp"
                    android:text="Hall"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="2dp"
                    android:text="Sheikh Russel Hall"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10dp"
                    android:text="Registration No"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="2dp"
                    android:text="20200650769"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Additional Info Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Class Roll"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:text="399"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Signature"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:text="Hasan"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Footer Section with Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="55dp"
                android:layout_height="78dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:contentDescription="Phone"
                android:onClick="pressPhone"
                android:scaleType="fitStart"
                android:src="@drawable/phone" />

            <ImageView
                android:id="@+id/fb"
                android:layout_width="55dp"
                android:layout_height="78dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:contentDescription="Facebook"
                android:onClick="pressFb"
                android:scaleType="fitStart"
                android:src="@drawable/fb" />

            <ImageView
                android:id="@+id/mail"
                android:layout_width="55dp"
                android:layout_height="78dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:contentDescription="Mail"
                android:onClick="pressMail"
                android:scaleType="fitStart"
                android:src="@drawable/mail" />

            <ImageView
                android:id="@+id/linked"
                android:layout_width="55dp"
                android:layout_height="78dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:contentDescription="LinkedIn"
                android:onClick="pressLinkedIn"
                android:scaleType="fitStart"
                android:src="@drawable/linked_in" />

            <ImageView
                android:id="@+id/github"
                android:layout_width="55dp"
                android:layout_height="78dp"
                android:layout_marginTop="15dp"
                android:contentDescription="GitHub"
                android:onClick="pressGitHub"
                android:scaleType="fitStart"
                android:src="@drawable/github" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
